<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="SmartechSeleniumHomeTask1" verbose="1">

    <test name="Smoke">
        <parameter name="browser" value="firefox"/> <!-- Available values for browser parameter: firefox, chrome (default), edge -->
        <groups>
            <run>
                <include name="Smoke" />
            </run>
        </groups>

        <classes>
            <class name="avtodispetcher.AvtodispetcherTest">
                <methods>
                    <include name="verifyAvtodispetcherPageIsDisplayedInSearchResult"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Regression">
        <parameter name="browser" value="firefox"/> <!-- Available values for browser parameter: firefox, chrome (default), edge -->
        <groups>
            <run>
                <include name="Regression" />
            </run>
        </groups>

        <classes>
            <class name="avtodispetcher.AvtodispetcherTest">
                <methods>
                    <exclude name="verifyAvtodispetcherPageIsDisplayedInSearchResult" />
                </methods>
            </class>
        </classes>
    </test>

</suite>